<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.cbr.gradienttextview.GradientTextView
        android:id="@+id/gradient_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gradient Right"
        android:textSize="40sp"
        android:textStyle="bold"
        app:gt_color_list="@array/rainbow"
        app:gt_gradient_direction="right"/>

    <com.cbr.gradienttextview.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gradient UP"
        android:textSize="40sp"
        android:textStyle="bold"
        app:gt_color_list="@array/red_palette"
        app:gt_gradient_direction="up"/>


    <com.cbr.gradienttextview.GradientTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Normal Text"
        android:textSize="40sp"
        android:textStyle="bold"/>

</LinearLayout>
